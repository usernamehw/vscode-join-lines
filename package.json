{
	"name": "vscode-join-lines",
	"displayName": "Join Lines",
	"description": "Join Lines in editor (with custom separator)",
	"version": "0.2.0",
	"publisher": "usernamehw",
	"license": "MIT",
	"engines": {
		"vscode": "^1.60.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/usernamehw/vscode-join-lines"
	},
	"bugs": {
		"url": "https://github.com/usernamehw/vscode-join-lines/issues"
	},
	"qna": false,
	"categories": [
		"Other"
	],
	"keywords": [
		"join",
		"lines"
	],
	"icon": "img/icon.png",
	"activationEvents": [
		"onCommand:joinLines.joinLines",
		"onCommand:joinLines.joinLinesWithSeparator"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"title": "Join Lines",
			"properties": {
				"joinLines.defaultSeparator": {
					"type": "string",
					"default": " ",
					"markdownDescription": "Symbol that is used when joining lines."
				},
				"joinLines.wrapLeft": {
					"type": "string",
					"default": "",
					"markdownDescription": "Symbol to wrap the line on the left."
				},
				"joinLines.wrapRight": {
					"type": "string",
					"default": "",
					"markdownDescription": "Symbol to wrap the line on the right."
				}
			}
		},
		"commands": [
			{
				"command": "joinLines.joinLines",
				"title": "Join",
				"category": "Join Lines"
			},
			{
				"command": "joinLines.joinLinesWithSeparator",
				"title": "Join With Separator",
				"category": "Join Lines"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/chai": "^4.3.3",
		"@types/glob": "^8.0.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^5.37.0",
		"@typescript-eslint/parser": "^5.37.0",
		"@vscode/test-electron": "^2.1.5",
		"chai": "^4.3.6",
		"eslint": "^8.23.1",
		"glob": "^8.0.3",
		"mocha": "^9.2.2",
		"ts-loader": "^9.3.1",
		"typescript": "^4.8.3",
		"webpack": "^5.74.0",
		"webpack-cli": "^4.10.0"
	}
}
